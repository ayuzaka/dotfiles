{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "*": "ask",
      "rm *": "deny",
      "sudo": "deny",
      "git push *": "deny",
      "git reset *": "deny",
      "find": "deny",
      "cat": "allow",
      "fd": "allow",
      "grep": "allow",
      "rg": "allow",
      "mkdir": "allow",
      "ls": "allow",
      "lsd": "allow",
      "which": "allow",
      "touch": "allow",
      "echo": "allow",
      "sort": "allow",
      "wc": "allow",
      "ghq *": "allow"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow",
      "*.env.*.example": "allow"
    },
    "write": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow",
      "*.env.*.example": "allow"
    }
  },
  "mcp": {},
  "tools": {
    "web_search": false
  }
}
