{
  "title": "global keybind",
  "rules": [
    {
      "description": "control + ] to Esc",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "description": "Only for VS Code",
              "bundle_identifiers": [
                "com.github.wez.wezterm",
                "com.microsoft.VSCode",
                "md.obsidian"
              ]
            }
          ],
          "to": [
            {
              "key_code": "escape"
            },
            {
              "key_code": "l"
            }
          ]
        }
      ]
    }
  ]
}
