{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "*": "ask",
      "rm *": "deny",
      "sudo": "deny",
      "git push *": "deny",
      "git reset *": "deny",
      "cat": "allow",
      "fd": "allow",
      "rg": "allow"
    },
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow",
      "*.env.*.example": "allow"
    },
    "write": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.env.example": "allow",
      "*.env.*.example": "allow"
    }
  },
  "mcp": {}
}
