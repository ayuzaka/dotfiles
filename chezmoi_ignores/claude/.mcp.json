{
  "mcpServers": {
    "docker": {
      "type": "stdio",
      "command": "docker",
      "args": [
        "mcp",
        "gateway",
        "run"
      ]
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "<project_path>"
      ]
    },
    "grep": {
      "type": "http",
      "url": "https://mcp.grep.app"
    },
    "aws-knowledge-mcp-server": {
      "command": "uvx",
      "args": [
        "fastmcp",
        "run",
        "https://knowledge-mcp.global.api.aws"
      ]
    },
    "codex": {
      "type": "stdio",
      "command": "codex",
      "args": [
        "mcp"
      ]
    },
    "chrome-devtools": {
      "type": "stdio",
      "command": "chrome-devtools-mcp"
    }
  }
}
