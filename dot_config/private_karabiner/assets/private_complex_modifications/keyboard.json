{
  "title": "global keybind",
  "rules": [
    {
      "description": "control + ] to Esc",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.github.wez.wezterm",
                "com.microsoft.VSCode",
                "md.obsidian",
                "org.alacritty"
              ]
            }
          ],
          "to": [
            {
              "key_code": "escape"
            },
            {
              "key_code": "l"
            }
          ]
        }
      ]
    },
    {
      "description": "Alacritty: Ctrl+j → Ctrl+Alt+0（AquaSKK切替用）",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": [
                "option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "org.alacritty"
              ]
            }
          ]
        }
      ]
    }
  ]
}
