{
  "title": "global keybind",
  "rules": [
    {
      "description": "Esc to ABC",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape"
          },
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.github.wez.wezterm",
                "com.microsoft.VSCode"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "to_after_key_up": [
            {
              "key_code": "l"
            }
          ]
        }
      ]
    }
  ]
}
