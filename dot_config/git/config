[include]
  path = ~/.config/git/config.local
[core]
  excludesfile = ~/.config/git/gitignore_global
  editor = nvim
  pager = less -x4
[gpg]
  format = ssh
[commit]
  verbose = true
  gpgsign = true
  template = ~/.config/git/gitmessage
[credential "https://github.com"]
  helper =
  helper = !gh auth git-credential
[credential "https://gist.github.com"]
  helper =
  helper = !gh auth git-credential
[credential]
  helper = osxkeychain
[init]
  defaultBranch = main
[rerere]
  enabled = true
[fetch]
  prune = true
  pruneTags = true
[pull]
  rebase = true
[push]
  useForceIfIncludes = true
  autoSetupRemote = true
[mergetool]
  trustExitCode = true
 [diff]
  tool = difftastic
 [difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  difftool = true
[tig]
  tab-size = 4
