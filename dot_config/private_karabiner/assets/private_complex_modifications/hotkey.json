{
  "title": "hotkeys to switch app",
  "rules": [
    {
      "description": "ctrl-1 to WezTerm",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "1",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'WezTerm'"
            }
          ],
          "to_after_key_up": [
            {
              "select_input_source": {
                "input_source_id": "com.apple.keylayout.ABC",
                "language": "en"
              }
            }
          ]
        }
      ]
    },
    {
      "description": "ctrl-3 to Obsidian",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "3",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'obsidian'"
            }
          ]
        }
      ]
    },
    {
      "description": "ctrl-4 to Firefox",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "4",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Firefox'"
            }
          ]
        }
      ]
    },
    {
      "description": "ctrl-5 to Chrome",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "5",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Google Chrome'"
            }
          ]
        }
      ]
    },
    {
      "description": "ctrl-7 to Alacritty vim",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "7",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -na Alacritty --args --command vim /tmp/edit.md"
            }
          ]
        }
      ]
    },
    {
      "description": "ctrl-8 to 1Password",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "8",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a '1Password'"
            }
          ]
        }
      ]
    },
    {
      "description": "ctrl-9 to Finder",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "9",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Finder'"
            }
          ]
        }
      ]
    }
  ]
}
