{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "allowCompoundWords": true,
  "dictionaries": [
    "dotfiles",
    "program",
    "custom"
  ],
  "dictionaryDefinitions": [
    {
      "name": "dotfiles",
      "path": "~/.local/share/cspell/dict-user.txt",
      "description": "dotfiles dictionary"
    },
    {
      "name": "program",
      "path": "~/.local/share/cspell/dict-program.txt"
    },
    {
      "name": "custom",
      "path": "~/.local/share/cspell/dict-custom.txt"
    }
  ],
  "languageSettings": [
    {
      "languageId": "vim",
      "locale": "*",
      "ignoreRegExpList": [
        "/Plug .*/"
      ],
      "dictionaries": [
        "program"
      ]
    }
  ]
}
