{
  "title": "hotkeys to switch app for work",
  "rules": [
    {
      "description": "ctrl-2 to Figma",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "2",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Figma'"
            }
          ]
        }
      ]
    },
    {
      "description": "ctrl-3 to Slack",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "3",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Slack'"
            }
          ],
          "to_after_key_up": [
            {
              "select_input_source": {
                "input_source_id": "jp.sourceforge.inputmethod.aquaskk",
                "language": "ja"
              }
            }
          ]
        }
      ]
    },
    {
